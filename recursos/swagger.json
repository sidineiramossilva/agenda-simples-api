{
  "openapi": "3.0.0",
  "info": {
    "title": "API de Agenda Simples",
    "version": "1.0.0",
    "description": "API para agendamento simples entre clientes e prestadores de serviço." 
  },
  "servers": [
    { "url": "http://localhost:3000" }
  ],
  "paths": {
    "/api/login": {
      "post": {
        "summary": "Login de usuário",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "usuario": { "type": "string" },
                  "senha": { "type": "string" },
                  "tipo": { "type": "string", "enum": ["instrutor", "cliente", "prestador"] }
                },
                "required": ["usuario", "senha", "tipo"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token JWT gerado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": { "type": "string" }
                  }
                }
              }
            }
          },
          "401": { "description": "Usuário ou senha inválidos" }
        }
      }
    },
    "/api/prestador": {
      "post": {
        "summary": "Registrar prestador",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "usuario": { "type": "string" },
                  "senha": { "type": "string" },
                  "nome": { "type": "string" },
                  "servico": { "type": "string" }
                },
                "required": ["usuario", "senha", "nome", "servico"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Prestador registrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Prestador" }
              }
            }
          },
          "400": { "description": "Dados obrigatórios ausentes" },
          "409": { "description": "Usuário já cadastrado" }
        }
      }
    },
    "/api/prestadores": {
      "get": {
        "summary": "Buscar prestadores",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Lista de prestadores",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Prestador" }
                }
              }
            }
          }
        }
      }
    },
    "/api/cliente": {
      "post": {
        "summary": "Registrar cliente",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "usuario": { "type": "string" },
                  "senha": { "type": "string" },
                  "nome": { "type": "string" }
                },
                "required": ["usuario", "senha", "nome"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente registrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Cliente" }
              }
            }
          },
          "400": { "description": "Dados obrigatórios ausentes" },
          "409": { "description": "Usuário já cadastrado" }
        }
      }
    },
    "/api/cliente/{id}": {
      "get": {
        "summary": "Buscar cliente por ID",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Dados do cliente",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Cliente" }
              }
            }
          },
          "404": { "description": "Cliente não encontrado" }
        }
      }
    },
    "/api/horario": {
      "post": {
        "summary": "Registrar horário de atendimento do prestador",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prestadorId": { "type": "integer" },
                  "data": { "type": "string", "format": "date" },
                  "hora": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" }
                },
                "required": ["prestadorId", "data", "hora"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Horário registrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Horario" }
              }
            }
          },
          "400": { "description": "Dados obrigatórios ausentes ou horário não disponível" },
          "404": { "description": "Prestador não encontrado" },
          "409": { "description": "Horário já cadastrado para este prestador" }
        }
      }
    },
    "/api/agendamento": {
      "post": {
        "summary": "Registrar agendamento",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "clienteId": { "type": "integer" },
                  "prestadorId": { "type": "integer" },
                  "data": { "type": "string", "format": "date" },
                  "hora": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" }
                },
                "required": ["clienteId", "prestadorId", "data", "hora"]
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Agendamento registrado",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Agendamento" }
              }
            }
          },
          "400": { "description": "Dados obrigatórios ausentes, horário não disponível ou data passada" },
          "404": { "description": "Cliente ou prestador não encontrado" },
          "409": { "description": "Conflito de agendamento para cliente ou prestador" }
        }
      }
    },
    "/api/agendamentos/{clienteId}": {
      "get": {
        "summary": "Buscar agendamentos do cliente",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          { "name": "clienteId", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": {
          "200": {
            "description": "Lista de agendamentos do cliente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/Agendamento" }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Prestador": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "usuario": { "type": "string" },
          "senha": { "type": "string" },
          "nome": { "type": "string" },
          "servico": { "type": "string" },
          "tipo": { "type": "string" },
          "horarios": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "data": { "type": "string", "format": "date" },
                "hora": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" }
              }
            }
          }
        }
      },
      "Cliente": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "usuario": { "type": "string" },
          "senha": { "type": "string" },
          "nome": { "type": "string" },
          "tipo": { "type": "string" }
        }
      },
      "Horario": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "prestadorId": { "type": "integer" },
          "data": { "type": "string", "format": "date" },
          "hora": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" }
        }
      },
      "Agendamento": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "clienteId": { "type": "integer" },
          "prestadorId": { "type": "integer" },
          "data": { "type": "string", "format": "date" },
          "hora": { "type": "string", "pattern": "^\\d{2}:\\d{2}$" }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
